<%- include('../compartido/estilos-generales')%>

<link rel="stylesheet" href="/css/paciente/estilos-perfil.css">

<div>
    <%- include('nav-paciente') %>

    <div>

        <h1>SISTEMA DE AGENDACIÓN DE CITAS MEDICAS</h1>
        <h2>PERFIL</h2>

        <div class="container">
            <form action= " <%= 'http://localhost:3001/paciente/editarPacienteDesdeVista/'+ paciente.id%>" method="POST">
            <div class="row">
                <div class="col-sm-3">
                    <img class="img-thumbnail" src="/imagenes/logo_perfil.png" alt="">
                </div>
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <div class="col-10">
                                    <label for="cedulaID" class="text-white">Cedula </label>
                                    <input type="text" class="form-control" id="cedulaID" name="cedula" value="<%= paciente.cedula %>" disabled>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-10">
                                    <label for="name" class="text-white">Nombre </label>
                                    <input type="text" class="form-control" id="name" name="nombre" value="<%= paciente.nombre %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-10">
                                    <label for="direccion" class="text-white">Direccion </label>
                                    <input type="text" class="form-control" id="direccion" name="direccion" value="<%= paciente.direccion %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-10">
                                    <label for="email" class="text-white">Correo </label>
                                    <input type="email" class="form-control" id="email" name="correo" value="<%= paciente.correo %>">
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="col-6">
                            <div class="form-group row">
                                <div class="col-10">
                                    <label for="telf" class="text-white">Teléfono </label>
                                    <input type="text" class="form-control" id="telf" name="telefono" value="<%= paciente.telefono%>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-10">
                                    <label for="userName" class="text-white">UserName </label>
                                    <input type="text" class="form-control" id="userName" name="user" value="<%= paciente.user %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-10">
                                    <label for="pass" class="text-white">Password </label>
                                    <input type="password" class="form-control" id="pass" name="password" value="<%= paciente.password %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="generoID" class="text-white col-10"><h5>Género </h5></label>
                                <div class="col-10">
                                    <input id="generoID"
                                           type="radio"
                                           name="genero"
                                           value="Hombre"
                                    <% if (paciente.genero === 'Hombre') { %>
                                           checked
                                            <%  } %>
                                    > <span>Hombre </span><br>
                                    <input id="generoID"
                                           type="radio"
                                           name="genero"
                                           value="Mujer"
                                    <% if (paciente.genero === 'Mujer') { %>
                                           checked
                                            <%  } %>
                                    ><span> Mujer </span><br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-group text-center">
                        <button class="btn btn-info btn-block col-8 ">ACTUALIZAR</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
