<%- include('../compartido/estilos-generales')%>
<link rel="stylesheet" href="/css/administrador/estilos-editar-doc.css">
<div class="main">


    <h1> EDITAR DOCTOR</h1>

    <div class="container">
        <form action= " <%= 'http://localhost:3001/doctor/editarDesdeVista/'+ doctor.id%>" method="POST">
            <div class="form-row">
                <div class="col-md-6 mb-3">

                    <input type="text" class="form-control mt-4" id="validationDefault01" name="cedula" value="<%= doctor.cedula %>"  disabled>
                    <input type="text" class="form-control mt-4" id="validationDefault02" name="nombre" value="<%= doctor.nombre %>" required>
                    <input type="text" class="form-control mt-4" id="validationDefault03" name="especialidad" value="<%= doctor.especialidad %>" required>
                    <input type="email" class="form-control mt-4" id="validationDefault04" name="correo" value="<%= doctor.correo %>" required>
                    <input type="text" class="form-control mt-4" id="validationDefault05" name="telefono" value="<%= doctor.telefono %>" required>
                    <input type="text" class="form-control mt-4" id="validationDefault06" name="direccion" value="<%= doctor.direccion %>" required>
                </div>
                <div class="col-md-6 mb-3">

                    <input type="text" class="form-control mt-4" id="validationDefault07" name="consultorio" value="<%= doctor.numeroConsultorio %>" required>
                    <input type="date" class="form-control mt-4" id="validationDefault08" name="fechaNacimiento" value="<%= doctor.fechaNacimiento %>" disabled>
                    <input type="text" class="form-control mt-4" id="validationDefault09" name="user" value="<%= doctor.user %>" required>
                    <input type="password" id="inputPassword5" class="form-control mt-4" name="password" value="<%= doctor.password %>">

                    <br>
                    <label for="generoID" class="text-white"><h4>GÃ©nero</h4></label>

                    <div class="mt">

                        <input id="generoID"
                               type="radio"
                               name="genero"
                               value="Hombre"
                                <% if (doctor.genero === 'Hombre') { %>
                                    checked
                                <%  } %>
                        > <span>Hombre</span> <br>
                        <input id="generoID"
                               type="radio"
                               name="genero"
                               value="Mujer"
                                <% if (doctor.genero === 'Mujer') { %>
                                    checked
                                <%  } %>
                        > <span>Mujer</span> <br>
                    </div>


                </div>
            </div>

            <button type="submit" class="btn btn-info btn-block mt-5">EDITAR</button>
        </form>
    </div>

</div>