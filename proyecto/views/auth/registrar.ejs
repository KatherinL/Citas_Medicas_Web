<%- include('../compartido/estilos-generales')%>

<link rel="stylesheet" href="/css/estilos-register.css">

<div class="main">

    <h1> REGISTRO</h1>

    <div class="container">
        <form action="paciente" method="POST">
            <div class="form-row">
                <div class="col-md-6 mb-3">

                    <input type="text" class="form-control" id="validationDefault01" placeholder="Nombre Completo" name="nombre" required>
                    <input type="text" class="form-control mt-4" id="validationDefault02" placeholder="Direccion" name="direccion" required>
                    <input type="text" class="form-control mt-4" id="validationDefault03" placeholder="Correo" name="correo" required>
                    <input type="text" class="form-control mt-4" id="validationDefault04" placeholder="Celular" name="telefono" required>
                    <input type="text" class="form-control mt-4" id="validationDefault05" placeholder="Usuario" name="user" required>
                    <input type="password" id="inputPassword5" class="form-control  mt-4 " placeholder="Contraseña" name="password" required>

                </div>
                <div class="col-md-6 mb-3">

                    <input type="text" class="form-control" id="validationDefault06" placeholder="CI" name="cedula" required>
                    <input type="date" class="form-control mt-4" id="validationDefault07" placeholder="2000-09-20" name="fechaNacimiento" required>

                    <br>
                    <label for="generoID" class="text-white"><h4>Género</h4></label>
                    <div class="mt">
                        <input id="generoID" type="radio" name="genero" value="Hombre"> <span>Hombre</span> <br>
                        <input id="generoID" type="radio" name="genero" value="Mujer"> <span>Mujer</span> <br>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-info btn-block mt-5">REGISTRAR</button>
        </form>
    </div>

</div>